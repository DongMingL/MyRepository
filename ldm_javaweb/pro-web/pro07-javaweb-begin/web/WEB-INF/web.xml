<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.ldm.servlet.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
        <!--
        1、用户发请求，action = add
        2、项目中，web.xml中找到<url-pattern>/add</url-pattern> 第12行
        3、找第11行中的 <servlet-name>AddServlet</servlet-name>
        4、找servlet-mapping中与servlet-name一致的servlet  找到第7行
        5、找到第8行的servlet-class
        6、用户发送的是post请求，因此tomcat就会执行AddServlet的doPost方法
        -->
    </servlet-mapping>
</web-app>